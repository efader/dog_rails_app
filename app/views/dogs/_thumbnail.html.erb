<a href="<%= url_for(dog) %>">
  <article>
    <h2 class="dog-name"><%= dog.name %></h2>
    <%= image_tag url_for(dog.images.first), class: "dog-photo", alt: "Photo of #{dog.name}" %>
  </article>
</a>

<% if dog_counter % 2 == 1 %>
    <a href="#">
        <article>
            <%= image_tag "ad", class: "advertisement", alt: "Advertisement" %>
        </article>
    </a>
<% end %>
