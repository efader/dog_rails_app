<%= simple_form_for @dog, html: {multipart: true} do |f| %>
  <%= f.input :name %>
  <%= f.input :description, as: :text %>

  <% @upload_number.times do |i| %>
      <%= label_tag "dog[images][]", "Image" %>
      <%= file_field_tag "dog[images][]", type: :file %>
      <br>
  <% end %>

  <% if @dog.images.any? %>
    <%= image_tag @dog.images.first %>
  <% end %>

  <%= f.button :submit %>
<% end %>
